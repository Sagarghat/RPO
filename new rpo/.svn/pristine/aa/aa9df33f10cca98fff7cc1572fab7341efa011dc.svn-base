<div class="container  shadow-lg registerList-bg">
        <div class="col-md-offset-4 col-md-4 mx-auto">
            <nav class="navbar navbar-expand-sm navbar-light bg-white">
                <a class="navbar-brand navbar-header img-Responsive " href="#"><img src="\assets\RecruitExlogo.jpg"
                        width="150px"></a>
            </nav>
            <form [formGroup]="registerForm" (ngSubmit)="submit()">
                <h3>Create Account</h3>
                <div class="form-group">
                    <label >Email address:</label>
                    <input type="text" class="form-control" formControlName="emailId">
                    <div *ngIf="f.emailId.touched && f.emailId.invalid">
                        <p *ngIf="f.emailId.errors.required" class="valid" style="color: red;">Email
                            is required</p>
                        <p *ngIf="f.emailId.errors.email" class="valid" style="color: red;">Enter valid email</p>
                    </div>
                </div>
                <div class="form-group">
                    <label>Company Phone:</label>
                    <input type="text" class="form-control" formControlName="phoneNo">
                    <div *ngIf="f.phoneNo.dirty && f.phoneNo.invalid">
                        <p *ngIf="f.phoneNo.errors.required" class="valid" style="color: red;">Company Phone
                            is required</p>
                        <p *ngIf="f.phoneNo.errors.pattern" class="valid" style="color: red;">Enter valid mobile</p>
                    </div>
                </div>
                <div class="form-group">
                    <label>Company Name:</label>
                    <input type="text" class="form-control" formControlName="companyName">
                    <div *ngIf="f.companyName.touched && f.companyName.invalid">
                        <p *ngIf="f.companyName.errors.required" class="valid" style="color: red;">CompanyName
                            is required</p>
                            <p *ngIf="f.companyName.errors.pattern" class="valid" style="color: red;">Enter valid CompanyName</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
    
                        <div class="form-group">
                            <label >Zip Code:</label>
                            <input type="text" class="form-control" formControlName="zipCode" >
                            <div *ngIf="f.zipCode.touched && f.zipCode.invalid">
                                <p *ngIf="f.zipCode.errors.required" class="valid" style="color: red;">ZipCode
                                    is required</p>
                                    <p *ngIf="f.zipCode.errors.pattern" class="valid" style="color: red;">Enter valid ZipCode</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
    
                        <div class="form-group">
                            <label>Country :</label>
                            <input type="text" class="form-control" formControlName="country" >
                            <div *ngIf="f.country.touched && f.country.invalid">
                                <p *ngIf="f.country.errors.required" class="valid" style="color: red;">Country
                                    is required</p>
                                    <p *ngIf="f.country.errors.pattern" class="valid" style="color: red;">Enter valid Country name</p>
                            </div>
                            <!-- <Select type="country" class="form-control" ngModel="country" name="country">
                                <option selected value="">India</option>
                                <option value="UsA">USA</option>
                            </Select> -->
                        </div>
                    </div>
    
                </div>
    
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" formControlName="box">
                        * I accept,Ojas's Terms of Use and Privacy Policy.
                    </label>
    
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3 mb-5" >Continue</button>
            </form>
        </div>
    
    </div>
