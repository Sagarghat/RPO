   <h3>Send Email</h3>
  </nav>
<form [formGroup]="registerForm" (ngSubmit)="save()">





  <div class="row">
    <div class=" col-sm-5 ml-5">
    <div class="row ">
        <div class="col-sm-4 ">
            <input type="text" class="form-control" disabled value="TO" style=" border-bottom: 0px;">
        </div>
        <div class="col-sm-7">
            <input type="email" name="to" class="form-control"  formControlName="to" [(ngModel)]="mail">
          
        </div>
    </div>
</div>


  </div>
  <br>

  <div class="row">
    <div class=" col-sm-5 ml-5">
    <div class="row ">
        <div class="col-sm-4 ">
            <input type="text" class="form-control" disabled value="CC" style=" border-bottom: 0px;">
        </div>
        <div class="col-sm-7 ">
            <input type="email" name="cc" class="form-control"   formControlName="cc">
          
        </div>
    </div>
</div>


  </div>
  <br>
  
  <div class="row">
    <div class=" col-sm-5 ml-5">
    <div class="row ">
        <div class="col-sm-4 ">
            <input type="text" class="form-control" disabled value="BCC" style=" border-bottom: 0px;">
        </div>
        <div class="col-sm-7 ">
            <input type="email" name="bcc" class="form-control"   formControlName="bcc">
          
        </div>
    </div>
</div>


  </div>
  <br>
  <div class="row">
    <div class=" col-sm-5 ml-5">
    <div class="row ">
        <div class="col-sm-4 ">
            <input type="text" class="form-control" disabled value="Subject" style=" border-bottom: 0px;">
        </div>
        <div class="col-sm-7 ">
            <input type="text" name="messageSubject" class="form-control"   formControlName="messageSubject">
          
        </div>
    </div>
</div>


  </div>
<br>


  <div class="col-md-11 col-sm-11 col-11 col-xl-11">
  <ejs-richtexteditor   name="messageBody" formControlName="messageBody" ></ejs-richtexteditor>
</div>

